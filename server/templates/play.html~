<script type="text/javascript">


var curr_slide = $("#slides > div").first();
curr_slide.css('visibility', "visible");


$("#next_slide").click(function(){
    $("#slides > div:visible").css('visibility', 'hidden');
    console.log(curr_slide.next());
    curr_slide = curr_slide.next();
    curr_slide.css('visibility', "visible");
});

</script>

